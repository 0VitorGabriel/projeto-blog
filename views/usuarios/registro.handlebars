<h3>Crie sua conta</h3>

{{#each erros}}

    <div class="alert alert-danger">
        {{texto}}
    </div>

{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <form action="" method="post">
            <label for="nome">
                nome:
            </label>

            <input type="text" name="nome" id="nome" class="form-control" required>

            <label for="email">
                email:
            </label>

            <input type="email" name="email" id="email" class="form-control" required>

            <label for="senha">
                senha:
            </label>

            <input type="password" name="senha" id="senha" class="form-control" minlength="8" required>

            <label for="senha_repetida">
                repita sua senha:
            </label>

            <input type="password" name="senha_repetida" id="senha_repetida" class="form-control" minlength="8" required>

            <button type="submit" class="btn btn-success mt-4">
                cadastrar usu√°rio
            </button>
        </form>
    </div>
</div>