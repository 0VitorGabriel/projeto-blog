<h2>Lista de categorias</h2>
<hr>

<a href="/admin/categorias/add">
    <button type="button" class="btn btn-success">adicionar categoria</button>
</a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>slug: {{slug}}</small> <br>
            {{#formatDate date}}data de criação: {{data}}{{/formatDate}}
        </div>
    </div>
{{else}}

{{/each}}